<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/menu_muscle_1"
        layout="@layout/item_menu_muscle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />

    <include
        android:id="@+id/menu_muscle_2"
        layout="@layout/item_menu_muscle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_muscle_1"
        tools:layout_editor_absoluteX="0dp" />

    <include
        android:id="@+id/menu_muscle_3"
        layout="@layout/item_menu_muscle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_muscle_2"
        tools:layout_editor_absoluteX="0dp" />

    <include
        android:id="@+id/menu_muscle_4"
        layout="@layout/item_menu_muscle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/menu_muscle_3"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>