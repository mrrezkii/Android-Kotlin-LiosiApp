<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gemastik.liosiapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.LiosiApp.NoActionBar">
        <activity
            android:name=".data.view.activity.SplashScreenActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".data.view.activity.AuthenticationActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".data.view.activity.MainActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>